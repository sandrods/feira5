<%= page_header "Cores" do %>
  <%= link_to(icn(:plus, 'Nova Cor'), new_cor_path, class: 'btn btn-sm btn-success') %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
    </tr>
  </thead>
  <tbody>
    <% @cores.each do |cor| %>
      <tr>
        <td><%= link_to cor.nome, edit_cor_path(cor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= index_count(@cores.count, 'cores encontradas') %>
