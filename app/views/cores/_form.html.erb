<%= simple_form_for(@cor) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :nome, label: 'Nome' %>
    </div>
  </div>

  <div class="bottom-actions">
  	<%= f.button :submit, 'Salvar Cor', class: 'btn btn-primary' %>

    <%= link_to icn(:trash, 'Apagar esta Cor'),
          @cor,
          method: :delete,
          data: { confirm: 'Tem certeza?' },
          class: 'btn btn-sm text-danger ml-auto' unless @cor.new_record? %>
  </div>

<% end %>
