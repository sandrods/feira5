<%= page_header 'Search for Fruits' do %>

  <%= link_to_back %>

<% end %>

<div class="search right mb-4">

  <%= simple_form_for :search,
                      url: '#',
                      method: 'GET',
                      html: { class: 'form-inline' } do |f| %>

    <%= f.input :competencia_eq,
                label: "Competência",
                collection: [['Bananas', 1], ['Apples', 2]],
                selected: 1,
                input_html: { class: 'custom_select' },
                required: false %>

    <%= f.input :numero_eq,
                label: "Número",
                required: false %>

    <%= button_tag icn(:search, 'Filtrar'), class: 'btn btn-sm btn-info mr-2' %>
    <%= button_tag 'Limpar', class: 'btn btn-sm btn-secondary clear' %>

  <% end %>

</div>
