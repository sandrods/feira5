$("#itens_sacola_dev_table").prepend("<%= j render partial: 'itens_sacola/item_devolvido', object: @item, as: 'item' %>");
$("#item_sacola_<%= @item.id %>").fadeOut();

$("#sacola_itens_count").html("<%= @sacola.itens.incluidos.count %>");
$("#sacola_itens_total").html("<%= number_to_currency @sacola.total %>");

$(".bar-code-input").val('');

window.show_item_box({
  ref:   '<%= @item.produto.ref %>',
  cor:   '<%= @item.cor.try :nome %>',
  tam:   '<%= @item.tamanho.try :nome %>',
  title: 'Item RETIRADO da Sacola',
  focus: $('#barcode_d')
});

