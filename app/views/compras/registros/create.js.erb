<%
if @registro.persisted?

  lista = render partial: "compras/registros/registro", collection: @compra.pagamentos
  total = number_to_currency @compra.pagamentos.sum(:valor)
%>

  $('#partial_compras_registros_registro').html('<%= j lista %>');
  $('#registro_data').val('');
  $('#registro_valor').val('');
  $('#registro_conta_id').val('').trigger('change')
  $('#total_pagamentos_compra').html('<%= total %>')

<% else %>
  $('#add_pag_form').html('<%= j render partial: "compras/registros/form" %>');
  App.init();
<% end %>
