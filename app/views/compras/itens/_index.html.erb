<div class="card">

  <div class="card-header alert-info d-flex align-items-center">
    <b>Peças</b>
    <div class="ml-auto">
      <%= form_tag(compra_itens_path(@compra), remote: true ) do %>
        <%= text_field_tag :barcode,
                            nil,
                            maxlength: 10,
                            class: 'bar-code-input',
                            placeholder: "Código de Barras",
                            autocomplete: 'off' %>
      <%- end -%>
    </div>
  </div>

  <table class="table table-sm table-striped mb-0">
    <thead>
      <tr>
        <th>Cód.</th>
        <th>Tipo</th>
        <th>Ref.</th>
        <th>Coleção</th>
        <th>Cor</th>
        <th>Tam.</th>
        <th class="text-right">Valor</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody id="itens_compra_table">
      <%= render partial: 'compras/itens/item', collection: @compra.itens.order('itens_estoque.id') %>
    </tbody>
  </table>
  <div class="card-footer text-right">
    <small>Total</small>
    <span id="total_itens_compra">
      <%= number_to_currency @compra.itens.sum(:valor) %></span>
  </div>
</div>
