<%
if @registro.persisted?
  lista = render partial: "vendas/registros/registro", collection: @venda.pagamentos
%>

  $('#partial_vendas_registros_registro').html('<%= j lista %>');
  $('#registro_data').val('');
  $('#registro_valor').val('');
  $('#registro_forma_id').select2('data', null)
  $('#totais_pagamentos').html('<%= j render partial: "vendas/registros/totais" %>');

<% else %>
  $('#add_pag_form').html('<%= j render partial: "vendas/registros/form" %>')
<% end %>
