<%= simple_form_for(@venda) do |f| %>

  <div class="card card-body bg-light card-text">

    <div class="row">
      <div class="col-sm-2">
        <%= f.input :data %>
      </div>
      <div class="col-sm-6">
        <%= f.association :cliente, label: 'Cliente', collection: Cliente.ativos, label_method: :nome %>
        <%= f.hidden_field :tipo, value: 'C' %>
      </div>
      <div class="col-sm-3 col-md-2">
        <%= f.input :desconto, as: :percentage %>
      </div>
    </div>

    <%= f.input :obs, as: :text %>

  </div>

  <div class="bottom-actions">
    <%= f.button :submit, 'Salvar Venda', class: 'btn btn-primary' %>

    <%= link_to icn(:trash, 'Apagar esta Venda'),
          @venda,
          method: :delete,
          data: { confirm: 'Tem certeza?' },
          class: 'btn btn-sm text-danger ml-auto' unless @venda.new_record? %>
  </div>

<% end %>
