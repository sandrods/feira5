<%= modal_page_header @item.produto.ref, "Editar Produto" %>

<%= simple_form_for @item, url: venda_item_path(@venda, @item), remote: true do |f| %>

  <div class="modal-body">
    <label>Pre√ßo do Produto </label><br/>
    <%= number_to_currency(@item.produto.valor) %>
    <hr/>
    <div class="row">
      <div class="col-sm-6">
        <%= f.input :desconto,
                    wrapper: 'input_group',
                    prepend: "%",
                    input_html: {
                      class: 'percentage',
                      value: @item.desconto.to_i
                    } %>
        <%= f.submit "Salvar Desconto", class: 'btn btn-sm btn-primary' %>
      </div>
      <div class="col-sm-6">
        <%= f.input :valor, as: :currency, input_html: { value: curr(@item.valor) } %>
        <%= f.submit "Salvar Valor", class: 'btn btn-sm btn-primary' %>
      </div>
    </div>

  </div>
  <div class="modal-footer">

    <%= link_to icn(:trash, 'Remover este Produto'),
          venda_item_path(@venda, @item),
          method: :delete,
          data: { confirm: 'Tem certeza?', remote: true },
          class: 'btn btn-sm text-danger ml-auto' %>

  </div>
<% end %>
