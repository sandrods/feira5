<%= simple_form_for(@sacola) do |f| %>

  <div class="row">
    <div class="col-md-6">
        <%= f.association :cliente, label: 'Cliente', collection: Cliente.all, label_method: :nome %>
    </div>
  </div>

  <div class="bottom-actions">
    <%= f.button :submit, 'Salvar Sacola', class: 'btn btn-primary' %>

    <%= link_to icn(:trash, 'Apagar este Sacola'),
          @sacola,
          method: :delete,
          data: { confirm: 'Tem certeza?' },
          class: 'btn btn-sm text-danger ml-auto' unless @sacola.new_record? %>
  </div>

<% end %>
