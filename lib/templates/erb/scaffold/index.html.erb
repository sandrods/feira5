<% att = (attributes_names.first || 'nome') %>
<%%= page_header "<%= plural_table_name.capitalize %>" do %>
  <%%= link_to(icn(:plus, 'Novo <%= singular_table_name.capitalize %>'), new_<%= singular_table_name %>_path, class: 'btn btn-sm btn-success') %>
<%% end %>

<div class="search right mb-4">

  <%%= simple_form_for @search,
                      url: <%= plural_table_name %>_path,
                      method: 'GET',
                      html: { class: 'form-inline' } do |f| %>

    <%%= f.input :<%= att %>_cont, label: "<%= att.capitalize %>" %>

    <%%= button_tag icn(:search, 'Filtrar'), class: 'btn btn-sm btn-info mr-2' %>
    <%%= button_tag 'Limpar', class: 'btn btn-sm btn-secondary clear' %>

  <%% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= att.capitalize %></th>
    </tr>
  </thead>
  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
        <td><%%= link_to <%= singular_table_name %>.<%= att %>, edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
      </tr>
    <%% end %>
  </tbody>
</table>

<hr/>
<h5 class="index_count"><span class="badge badge-info"><%%= @<%= plural_table_name %>.count %></span> <small><%= plural_table_name %> encontradas</small></h5>
